<link rel='stylesheet' href='/stylesheets/schedule/scheduleModal.css'/>
<script defer src="/javascripts/schedule/kakaoMap.js"></script>
<script defer src="/javascripts/schedule/scheduleModal.js"></script>
<div id="scheduleModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="scheduleModalDone()"><i class="fa-regular fa-circle-xmark"></i></span>
        <h3 class="hidden">일정 모달</h3>
        <div class="schedule">
            <label for="schedule_title">일정 제목</label>
            <!-- 최대 200자까지만 표시 -->
            <input type="text" id="schedule_title" name="schedule_title" placeholder="일정 제목을 입력해 주세요." maxlength="200"/>
        </div>
        <div class="schedule">
            <label for="schedule_start_day">시작일</label>
            <input type="datetime-local" id="schedule_start_day" name="schedule_start_day"/>
        </div>
        <div class="schedule">
            <label for="schedule_end_day">종료일</label>
            <input type="datetime-local" id="schedule_end_day" name="schedule_end_day"/>
        </div>
        <div class="schedule">
            <label for="schedule_content">일정 상세 내용</label>
            <textarea id="schedule_content" name="schedule_content" placeholder="일정에 대한 상새 내용을 입력해 주세요."></textarea>
        </div>
        <div class="schedule">
            <label for="schedule_tag">#태그 입력</label>
            <textarea id="schedule_tag" name="schedule_tag" placeholder="#해시태그"></textarea>
        </div>
        <div class="schedule_priority">
            <label for="schedule_end_day">우선 순위</label>
            <!-- 0~5까지 설정 가능, 기본값은 0 -->
            <input type="range" id="schedule_priority" name="schedule_priority"
            min="0" max="5" value="0" step="1" 
            oninput="schedule_priority_num.value = schedule_priority.value"/>
            <output  id="schedule_priority_num">0</output>
        </div>
        <div class="schedule">
            <input type="checkbox" id="schedule_address_q" name="schedule_address_q" onclick="show_map()"/>
            <label for="schedule_address_q">주소를 추가하시겠습니까?</label>
        </div>

        <%- include('./kakaoMap.ejs') %>
    </div>
</div>