    주요 기능 : 대쉬보드의 오늘 일정 완료율 영역
 -->
<script src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT" 
        crossorigin="anonymous">
</script> 
<script defer src="/javascripts/dashboard/todayScheduleChart.js"></script>
<link rel="stylesheet" href="/stylesheets/dashboard/todayScheduleChart.css">
<div class="todayScheduleChart_header">
  <i class="fa-solid fa-chart-pie"></i>
  <p>오늘 일정 완료율</p>
</div>
<div id="doneRatePoint">
  <!-- data-percentage에 넣고 싶은 값을 넣기 -->
  <svg id="radial-progress" class="radial-progress" data-percentage="0" viewBox="0 0 80 80">
    <circle class="incomplete" cx="40" cy="40" r="35"></circle>
    <!-- 일정 완료율 표시 bar -->
    <circle class="complete" cx="40" cy="40" r="35" style="stroke-dashoffset: 39.58406743523136;"></circle>
    <!-- 일정 완료율 텍스트 -->
    <text id="percentageText" class="percentage" x="30%" y="57%" transform="matrix(0, 1, -1, 0, 80, 0)"></text>
  </svg>
</div>
<div class="todayScheduleChart_count">
  <p>전체 일정 갯수 : </p>
  <p id="scheduleCount"></p>
</div>